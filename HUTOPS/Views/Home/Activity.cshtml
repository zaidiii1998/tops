@model List<Activity>
@{
    Page.Title = "Activity";
    Layout = "~/Views/Shared/_LayoutAdminPanal.cshtml";
}

<input class="form-control" type="text" id="id" name="Id" maxlength="25" style="display:none;" value="@ViewBag.User.Id">

<div class="container-fluid">
    <div class="boxWraper infoBox">
        <div class="headBox">
            <h2>Activity</h2>
        </div>

        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label>Activity Name</label>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label>Duration</label>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="divActivity">
                    @if (Model.Count > 0)
                    {


                        foreach (var item in Model)
                        {
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control ActivityName" value="@item.Name">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control ActivityDuration" value="@item.Duration" required="">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <button type="button" class="border-0 form-control trashActivity"><i class="fa fa-trash"></i></button>
                                    </div>
                                </div>
                            </div>
                        }



                    }
                    else
                    {<div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <input type="text" class="form-control ActivityName">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <input type="text" class="form-control ActivityDuration">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <button type="button" class="border-0 form-control trashActivity"><i class="fa fa-trash"></i></button>
                                </div>
                            </div>
                        </div>}
                    <button class="trashActivity" hidden></button>
                </div>
            </div>
            <div class="col-lg-12">
                <button type="button" class="global-btn-purple float-right" onclick="AddActivityRow();"><i class="fa fa-plus"></i></button>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-lg-12">
                @if (ViewBag.User.Declaration != 1 || HUTOPS.Helper.Utility.GetAdminFromSession().Name != null)
                {
                    <input class="savebtn global-btn-purple  float-right" type="button" onclick="SubmitActivity();" value="Submit">
                }
                else
                { <span class="text-danger float-right">You have already Submited your Application</span>
                }
            </div>
        </div>
    </div>
</div>
<a href="@Url.Action("TestDate","Home")" id="redirectToTestDate" hidden></a>
