<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - HUTOPS</title>
    <link rel="icon" type="image/x-icon" href="~/Content/img/favicon.ico">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<script type="text/javascript" charset="utf8" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>*@
    <script src="~/Scripts/jquery-3.5.1.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.datatables.net/autofill/2.6.0/css/autoFill.dataTables.min.css" />




    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-flow: column;
        }

        header {
            flex: 0 1 auto;
        }

        .dashboardWrapper {
            flex: 1 1 auto;
        }
    </style>
    <script src="~/Scripts/Duplicate.js"></script>
    <script src="~/Scripts/notify.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script src="~/Scripts/Custom.js?v="></script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-P1CFKBHNLK"></script>
    <script>window.dataLayer = window.dataLayer || []; function gtag() { dataLayer.push(arguments); } gtag('js', new Date()); gtag('config', 'G-P1CFKBHNLK');</script>
</head>
<body>
    <div class="loader" id="mainLoader">
        <img src="~/Content/Images/preloader.gif" />
    </div>
    <header class="" style="z-index: 1; background-color:#451051;">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-xl-12">
                    <div class="LogoWraper d-flex justify-content-center">
                        <img src="~/Content/Images/tops-logo.png" alt="Alternate Text" />
                    </div>
                </div>
            </div>
        </div>

        <div class="progress" id="barContainer">
            <div class="progress-bar progress-bar-striped active" role="progressbar"
                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:0%" id="progressBar">
                Application Completion Progress 0%
            </div>
        </div>
    </header>
    <div class="overBodyDiv">
        <div class="body-content container" id="bodyContent">
            @RenderBody()
        </div>
    </div>
    
    <footer>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <ul>
                        <li><a class="hoverUnderLine" href="mailto:tops@habib.edu.pk">tops@habib.edu.pk</a></li>
                        <li>&copy; @DateTime.Now.Year - <a class="hoverUnderLine" href="https://habib.edu.pk/">© Habib University</a></li>
                        <li>
                            Powered by <a class="hoverUnderLine" href="https://habib.edu.pk/huit/">
                                Powered-by HUIT
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#mainLoader').hide();
    </script>
</body>
</html>