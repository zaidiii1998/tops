@model List<EmailTemplate>
@{
    Page.Title = "Email Template";
    Layout = "~/Views/Shared/_LayoutAdminPanal.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="boxWraper">
                <div class="headBox">
                    <h2>Email Template</h2>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email Templates</label>
                                    <select class="form-control" id="comboEmailTemp" onchange="Change();">
                                        <option value="" selected disabled>Select Email Template</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.Id">@item.Description</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <br />
                                @*<input class="savebtn global-btn-purple  float-right m-1" type="button" id="btnAddNewEmail" onclick="AddNewEmailTemplate()" value="Add New">*@
                                <input class="savebtn global-btn-purple  float-right m-1" type="button" onclick="SaveEmailTemplate()" value="Update Changes">
                            </div>
                        </div><br />
                        <form>
                            <div class="form-group">
                                <label>Subject:</label>
                                <input type="text" class="form-control" id="txtSubject" /><br />
                            </div>
                            <div class="tinyMceTxt" id="textAreaEmailTemp"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function Change() {
        LoadEmailTemplate('comboEmailTemp', @Html.Raw(Json.Encode(Model)))
    }
</script>

<!-- Initialize the Summernote editor -->
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('#textAreaEmailTemp').summernote({
            height: 300,  
            toolbar: [
                // Add or remove toolbar buttons as needed
                //['style', ['bold', 'italic', 'underline', 'clear']],
                //['para', ['ul', 'ol', 'paragraph']],
                //['insert', ['link']],
                //['misc',
                ['codeview']
            ]
        });
    });
</script>