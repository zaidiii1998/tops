
@{
    Page.Title = "Admit Card";
    Layout = "~/Views/Shared/_LayoutAdminPanal.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="boxWraper">
                <div class="headBox">
                    <h2>Manage Admit Card</h2>
                    <div class="btnWraper">
                        <div class="row">
                            <div class="col-lg-12">
                            </div>
                        </div>
                    </div>
                </div>
                <form id="modalForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Test Date:</label>
                                        <input class="form-control" type="date" id="testDate" required />
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Shift:</label>
                                        <select class="form-control" id="comboShift" required>
                                            <option value="">Select Shift</option>
                                            <option value="1">First</option>
                                            <option value="2">Second</option>
                                            <option value="3">Third</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Venue: </label><br />
                                        <input type="radio" name="vanue" id="radioKarachi" value="Karachi" required/>
                                        <label for="radioKarachi"> Karachi </label>
                                        <input type="radio" name="vanue" id="radioIslamabad" value="Islamabad"required />
                                        <label for="radioIslamabad">Islamabad</label>
                                        <span class="text-danger" id="errVenue"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Action: </label><br />
                                        <input type="radio" name="type" id="radioAdmitCard" value="1" required />
                                        <label for="radioAdmitCard"> Generate Admit Card </label> <br />
                                        <input type="radio" name="type" id="radioSendEmail" value="2" required />
                                        <label for="radioSendEmail">Send Admit Card</label><br />
                                        <input type="radio" name="type" id="radioGenrateSend" value="3" required />
                                        <label for="radioGenrateSend">Generate & Send Admit Card</label><br />
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>HUTOPS Ids File: (Select only Excel File having extension .xlsx or .xls)
                                        <br />
                                            <a href="~/Content/HUTOPS Ids Demo File.xlsx" class="text-info">Download Demo File</a>
                                        <br />
                                        </label>
                                        
                                        <input class="form-control" type="file" id="HUTOPSIdsFile" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="button" class="savebtn global-btn-purple  float-right" onclick="SubmitAdmitCardBatch()">Generate Admit Cards</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



