@{
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}

<section class="signInWrap">
    <div class="container-fluid p-0">
        <div class="row m-0">
            <div class="col-lg-6 p-0 none991">
                <div class="imgWrap">
                    <img src="~/Content/img/image-content.jpg" alt="Alternate Text" />
                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="contentWrap">
                    <br /><br /><br /><br />
                    <img src="~/Content/img/mct-logo.svg" alt="Alternate Text" />
                    <h1>Testimony for student diverse interest, talent and skills !</h1>
                    <p>A purpose-built digital platform to collect, verify and report student meta-curricular experience during their tenure at Habib University.</p>
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="email"><b>Email</b></label>
                                    <input class="form-control" type="email" placeholder="Enter Email" name="email" maxlength="25" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="psw"><b>Password</b></label>
                                    <input class="form-control" type="password" placeholder="Enter Password" maxlength="25" name="psw" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <button class="savebtn global-btn-purple  float-right" type="submit">Login</button>
                        </div>
                        <div class="row">
                            <p>Create new account <a href="@Url.Action("Register","Account")">Sign Up</a>.</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row m-0 justify-content-end">
            <div class="col-lg-6 p-0 justify-content-flex-end">
                <p class="loginFooter">© Habib University <span>|</span> Powered by <a href="#" class="hoverUnderLine">HUIT</a> (ISO 27001 Certified)</p>
            </div>
        </div>
    </div>
</section>

<script>

    if ('@ViewBag.Result' !== "")
    {
        $('#error').html('@ViewBag.Result');
        ShowDivError('@ViewBag.Result');
    }
</script>